<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock.route_warehouse0_mto" model="stock.route">
            <field name="active">True</field>
            <field name="product_selectable">True</field>
            <field name="product_categ_selectable">True</field>
        </record>


        <record id="mrp.route_warehouse0_manufacture" model="stock.route">
            <field name="product_selectable">True</field>
            <field name="product_categ_selectable">True</field>
        </record>


        <record id="portal_mrp_demo_component" model="product.product">
            <field name="name">Demo Component A</field>
            <field name="is_storable">True</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="standard_price">10.0</field>
            <field name="list_price">15.0</field>
        </record>


        <record id="portal_mrp_demo_finished" model="product.product">
            <field name="name">Demo Finished Product</field>
            <field name="is_storable">True</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="standard_price">80.0</field>
            <field name="list_price">120.0</field>
            <field name="route_ids" eval="[(6, 0, [ref('mrp.route_warehouse0_manufacture'), ref('stock.route_warehouse0_mto')])]"/>
        </record>


        <function model="ir.model.data" name="_update_xmlids">
            <value model="base" eval="[{
                'xml_id': 'portal_mrp_customer.portal_mrp_demo_finished_tmpl',
                'record': obj().env.ref('portal_mrp_customer.portal_mrp_demo_finished').product_tmpl_id,
                'noupdate': False,
            }]"/>
        </function>


        <record id="portal_mrp_demo_bom_finished" model="mrp.bom">
            <field name="product_tmpl_id" ref="portal_mrp_customer.portal_mrp_demo_finished_tmpl"/>
            <field name="product_qty">1.0</field>
            <field name="type">normal</field>
            <field name="bom_line_ids" eval="[(0, 0, {
                'product_id': ref('portal_mrp_customer.portal_mrp_demo_component'),
                'product_qty': 2.0,
                'product_uom_id': ref('uom.product_uom_unit')
            })]"/>
        </record>


        <record id="portal_mrp_demo_partner" model="res.partner">
            <field name="name">Portal Demo Customer</field>
            <field name="email">portal.demo@example.com</field>
            <field name="customer_rank">1</field>
        </record>
    </data>
</odoo>
