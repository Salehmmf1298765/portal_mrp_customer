<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_mrp" name="Portal: Manufacturing Orders card" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[@id='portal_common_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Your Manufacturing Orders</t>
                <t t-set="url" t-value="'/my/mos'"/>
                <t t-set="text">Track your production orders linked to your sales</t>
                <t t-set="placeholder_count" t-value="'mrp_mo_count'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>


    <template id="portal_my_mos" name="My Manufacturing Orders">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Manufacturing Orders</t>
            </t>

            <div t-if="not mos" class="alert alert-warning" role="alert">
                There are currently no manufacturing orders linked to your account.
            </div>

            <t t-if="mos" t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th>MO</th>
                        <th class="text-start">Product</th>
                        <th class="text-end">Qty</th>
                        <th class="text-end">Start</th>
                        <th class="text-center">State</th>
                        <th class="text-start">Sales Order</th>
                    </tr>
                </thead>
                <t t-foreach="mos" t-as="mo">
                    <tr>
                        <td><span t-out="mo.name"/></td>
                        <td class="text-start">
                            <span t-out="mo.product_id.display_name"/>
                        </td>
                        <td class="text-end">
                            <span t-field="mo.product_qty"/>
                            <span class="text-muted" t-out="mo.product_uom_id.name"/>
                        </td>
                        <td class="text-end">
                            <span t-field="mo.date_start" t-options="{'widget': 'date'}"/>
                            <span class='d-none d-md-inline' t-field="mo.date_start" t-options="{'time_only': True}"/>
                        </td>
                        <td class="text-center">
                            <span class="badge rounded-pill text-bg-secondary"><span t-field="mo.state"/></span>
                        </td>
                        <td class="text-start">
                            <t t-set="so" t-value="mo.sale_line_id.order_id"/>
                            <a t-if="so" t-att-href="so.get_portal_url()"><t t-out="so.name"/></a>
                            <span t-else="" class="text-muted">â€”</span>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>


    <template id="portal_mrp_breadcrumbs" inherit_id="portal.portal_breadcrumbs" name="Portal breadcrumbs: MRP">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'mrp_mo'" class="breadcrumb-item active">Manufacturing Orders</li>
        </xpath>
    </template>
</odoo>
